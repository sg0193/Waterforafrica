    <script>
        $(document).ready(function () {
            var successText = $('#successtext').text();
            if (successText != "") {
                $('#divsuccess').show();
                $('#divverification').hide();
            }
            else {
                $('#divsuccess').hide();
            }
        });
    </script>
    <script>
        $(function () {
            //var img = '<img src="https://si0.twimg.com/a/1339639284/images/three_circles/twitter-bird-white-on-blue.png" />';

            //$("#blob").popover({ title: 'Look!  A bird image!', content: img });

            $('[rel=popover]').popover({
                html: true,
                title: '@Html.ActionLink("Edit Profile", "EditProfile")',
                content: '@Html.ActionLink("User Actions", "UserActions")'
            });

        });
    </script>
